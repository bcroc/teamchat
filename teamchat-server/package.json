{
  "name": "teamchat-server",
  "version": "1.0.0",
  "private": true,
  "description": "TeamChat API server with real-time messaging and WebRTC signaling",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm build:shared && tsx watch src/index.ts",
    "build": "pnpm build:shared && tsc -p tsconfig.json",
    "build:shared": "pnpm --filter @teamchat/shared build",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t teamchat-server .",
    "docker:up": "docker-compose up -d",
    "docker:up:build": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f server",
    "docker:shell": "docker-compose exec server sh",
    "docker:db:migrate": "docker-compose exec server npx prisma migrate deploy",
    "clean": "rm -rf dist node_modules packages/shared/dist"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.19.2",
    "@teamchat/shared": "workspace:*",
    "argon2": "^0.44.0",
    "fastify": "^5.7.4",
    "ioredis": "^5.9.2",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "socket.io": "^4.8.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
